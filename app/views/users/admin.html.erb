<!DOCTYPE html>
<% provide(:title, 'Administration') %>
<script>
$(document).ready(function(){$("body").hide().fadeIn(2000);});
</script>

<h1>Administration Centre</h1><p>
<div class="container-fluid" style="border:1px solid #cecece;">
<p>
          <div class="col-md-2">
                <div class="row">
                <a href="/users/new" class="btn btn-warning btn-block">New Employee</a></div><p>
                <div class="row">
                <a href="/users/admins" class="btn btn-warning btn-block">Admins</a></div><p>
          </div>

          <div class="col-md-8">
                <h1>    We have <%= User.count %> users in service</h1>
          </div>


      </div>
<p><br>
<div class="container-fluid" style="border:1px solid #cecece;">

<%= will_paginate %><br>
<div class="row">
  <div class="col-md-12">

<ul class="users">
            <% @users.each do |user| %><p>
                        <li>
                        <%= gravatar_for user, size: 50 %>
                        <%= link_to user.name, user %>
                          | <button type="button" class="btn btn-danger"><%= link_to "Delete", user, method: :delete,
                                              data: { confirm: "You're sure?" } %></button>

                        | <button type="button" class="btn btn-success"><%= link_to "Make Admin", user, data: {action: "make_admin"}, method: :patch,
                                            data: { confirm: "You're sure?" } %></button>

                        | <button type="button" class="btn btn-primary"><%= link_to "Revoke Admin", user, data: {action: "revoke_admin"}, method: :patch,
                                            data: { confirm: "You're sure?" } %></button>
                        </li>
                        <% end %>
  </ul>

  </div>
</div>
<%= will_paginate %>

</div>
