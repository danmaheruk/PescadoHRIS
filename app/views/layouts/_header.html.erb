<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("pescado-hosted.jpg", size: "120x90", alt: "PescadoHRIS"), '#', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", '/users/index' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              My Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "This is Pescado", '/static_pages/thisispescado' %></li>
              <li><%= link_to "Pescado Processes", '/static_pages/processes' %></li>
              <li><%= link_to "Pescado Application Forms", '/static_pages/applications' %></li>
              <li><%= link_to "Pescado Benefits", '/static_pages/benefits' %></li>
              <li><%= link_to "Appraisals & Training", '#' %></li>
              <li><%= link_to "My HR Information", current_user %></li>
              <li><%= link_to "My People's Pension", '/static_pages/pension' %></li>
              <li><%= link_to "My Leave", '#' %></li>
              <% if current_user.admin? %>
                <li class="divider"></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li><%= link_to "Administration", '/users/admin' %>
                </li><% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
              <li><%= link_to "Login", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
