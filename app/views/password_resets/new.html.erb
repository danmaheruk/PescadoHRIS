<% provide(:title, "Forgot Password") %>
<h1>Forgot password</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form_control' %>

    <%= f.submit "Submit", class: "btn btn-warning" %>
    <% end %>

  </div>
</div>
